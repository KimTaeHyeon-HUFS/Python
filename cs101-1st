def print_message():
  print("cs101 is fantastic")
  print("programming so much fun")

print_message() #함수정의

def repeat_message():
  print_message()
  print_message()
  
repeat_message() #반복문

from cs1robots import*
>>> create_world()
>>> hubo = Robot(beepers = 1) #로봇생성
>>> hubo.move() #로봇앞으로
>>> hubo.turn_left() #로봇왼쪽회전

def turn_right(): #로봇왼쪽3번회전=오른쪽회전1회
	hubo.turn_left()
	hubo.turn_left()
	hubo.turn_left()
  
for i in range(4): #반복문 ()안의 숫자만큼 반복실행
  print("HI")
  

def turn_around(): #두번돌면180도
  for i in range(2):
   hubo_turn_left()

